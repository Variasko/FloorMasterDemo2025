<Window x:Class="FloorMaster.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloorMaster.Views.Windows"
        mc:Ignorable="d"
        TextElement.FontFamily="Segoe UI"
        TextElement.FontSize="25"
        Title="Мастер пол" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Res/Мастер пол.png" Height="80"/>
                <TextBlock Text="Мастер пол" VerticalAlignment="Center"
                           FontSize="35" Margin="20 0"/>
            </StackPanel>

            <Button x:Name="PartnerButton"
                    HorizontalAlignment="Center"
                    Content="Партнёры"
                    Margin="15 30 15 15"
                    Padding="50 5"
                    Click="PartnerButton_Click"/>

            <Button x:Name="SalesButton"
                    HorizontalAlignment="Center"
                    Content="Продажи партнёров"
                    Margin="15"
                    Padding="50 5"
                    Click="SalesButton_Click"/>

        </StackPanel>
        
    </ScrollViewer>
</Window>
