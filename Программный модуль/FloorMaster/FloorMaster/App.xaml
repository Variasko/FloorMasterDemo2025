<Application x:Class="FloorMaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FloorMaster"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <!-- MainBackgound #FFF -->
        <!-- AdditionalBackgound #f4e8d3 -->
        <!-- Acent #76ba80 -->

        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="Background" Value="#76ba80"/>
            <Setter Property="BorderBrush" Value="#4d8a5f"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>

        <Style TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#f4e8d3"/>
            <Setter Property="BorderBrush" Value="#d4c9b6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
        

    </Application.Resources>
</Application>
